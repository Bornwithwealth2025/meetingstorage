CLIENT_URL='https://meet.bornwithwealth.com'
# Server Configuration
PORT=4000
NODE_ENV=production

# Recording Settings
RECORDING_DIR=./ui-recordings
MAX_FRAME_SIZE_MB=2
MAX_CONCURRENT_RECORDINGS=20
MAX_FPS=60

# FFmpeg Settings
FFMPEG_PATH=ffmpeg
FFPROBE_PATH=ffprobe
ENABLE_HARDWARE_ACCELERATION=true

# Client URL (for CORS)
CLIENT_URL=http://localhost:3000

# Performance
SOCKET_MAX_BUFFER_SIZE=100mb
FRAME_PROCESSING_BATCH_SIZE=10
AUDIO_BUFFER_SIZE=4096

# Security
ENABLE_AUTH=false
API_KEY=your-secret-key

# Logging
LOG_LEVEL=info
LOG_RETENTION_DAYS=7